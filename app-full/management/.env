# PhishGuard BASIC - Configuration Environment
# Copiez ce fichier en .env et modifiez les valeurs selon vos besoins

# ==============================================
# APPLICATION
# ==============================================
APP_NAME="PhishGuard BASIC"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://phishguard.votre-domaine.com
APP_TIMEZONE=Europe/Paris

# ==============================================
# BASE DE DONNÉES
# ==============================================
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_NAME=phishguard_basic
DB_USER=phishguard
DB_PASSWORD=VotreMotDePasseSecurise123!

# ==============================================
# CACHE REDIS
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================================
# CONFIGURATION EMAIL (SMTP)
# ==============================================
SMTP_HOST=smtp.votre-serveur.com
SMTP_PORT=587
SMTP_USER=noreply@votre-domaine.com
SMTP_PASS=VotreMotDePasseSMTP
SMTP_ENCRYPTION=tls
SMTP_FROM_NAME="PhishGuard Security"

# ==============================================
# INTELLIGENCE ARTIFICIELLE
# ==============================================
GEMINI_API_KEY=votre_cle_api_gemini
AI_MODEL=gemini-pro
AI_MAX_TOKENS=2048

# ==============================================
# SÉCURITÉ
# ==============================================
JWT_SECRET=VotreCleSecreteTresSecurisee256bits
ENCRYPTION_KEY=VotreCleDeChiffrement32Caracteres
SESSION_LIFETIME=1440
BCRYPT_ROUNDS=12

# ==============================================
# MONITORING ET LOGS
# ==============================================
LOG_LEVEL=info
LOG_FILE=/var/log/phishguard/app.log
AUDIT_LOG_ENABLED=true

# ==============================================
# CONFORMITÉ RGPD
# ==============================================
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
ANONYMIZE_LOGS=true
