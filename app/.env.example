# Node Environment
NODE_ENV=production

# Server Configuration
PORT=4000
FRONTEND_URL=http://localhost
VITE_API_URL=http://localhost:4000/api
# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/phishguard

# Redis (Optional)
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRES_IN=7d

# AI Provider Configuration
#//EXAMPLES
#GEMINI
AI_PROVIDER=GEMINI
AI_API_KEY=your_api_key_here
#//OpenAI
#AI_PROVIDER=OPENAI
#AI_API_KEY=your_openai_api_key
#//Anthropic Claude
#AI_PROVIDER=ANTHROPIC
#AI_API_KEY=your_anthropic_api_key
#//Ollama (local)
#AI_PROVIDER=OLLAMA
# Pas de clé API nécessaire
# Ollama doit être installé et en cours d'exécution

# Email Configuration
# Pour développement: utilisez MailHog (inclus dans Docker)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=PhishGuard <noreply@phishguard.local>

# Pour production: utilisez un vrai service SMTP
# Gmail:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# SendGrid:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key

# Mailgun:
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_USER=postmaster@your-domain.com
# SMTP_PASSWORD=your-mailgun-password

# Security Settings
SANDBOX_MODE=true
