# Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/phishguard

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AI Provider (GEMINI, OPENAI, CLAUDE, OLLAMA)
AI_PROVIDER=GEMINI
AI_API_KEY=your-api-key-here
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Application
APP_URL=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@phishguard.local

# Security Settings
SANDBOX_MODE=true
REQUIRE_APPROVAL=true

# Detection Thresholds
MIN_SECONDS_PER_WORD=3
ALERT_THRESHOLD_FAST_READ=0.8
ALERT_THRESHOLD_CLICK_RATE=0.7
ALERT_THRESHOLD_SUBMISSION_RATE=0.3

# Default Admin
DEFAULT_ADMIN_EMAIL=admin@local.test
DEFAULT_ADMIN_PASSWORD=ChangeMe123!